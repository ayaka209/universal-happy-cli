{
  "name": "universal-happy-cli",
  "version": "1.0.0",
  "description": "Universal CLI wrapper with remote control capabilities - wrap any command-line tool",
  "author": "Universal Happy CLI Contributors",
  "license": "MIT",
  "type": "module",
  "homepage": "https://github.com/ayaka209/universal-happy-cli",
  "bugs": "https://github.com/ayaka209/universal-happy-cli/issues",
  "repository": "ayaka209/universal-happy-cli",
  "bin": {
    "uhappy": "./bin/uhappy.mjs",
    "uhappy-universal": "./bin/uhappy-universal.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./lib": {
      "require": {
        "types": "./dist/lib.d.cts",
        "default": "./dist/lib.cjs"
      },
      "import": {
        "types": "./dist/lib.d.mts",
        "default": "./dist/lib.mjs"
      }
    },
    "./codex/happyMcpStdioBridge": {
      "require": {
        "types": "./dist/codex/happyMcpStdioBridge.d.cts",
        "default": "./dist/codex/happyMcpStdioBridge.cjs"
      },
      "import": {
        "types": "./dist/codex/happyMcpStdioBridge.d.mts",
        "default": "./dist/codex/happyMcpStdioBridge.mjs"
      }
    }
  },
  "files": [
    "dist",
    "bin",
    "scripts",
    "tools",
    "package.json"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "shx rm -rf dist && npx tsc --noEmit && pkgroll",
    "test": "tsx src/universal/test.ts",
    "test:format": "tsx src/universal/format-test.ts",
    "test:real-world": "tsx src/universal/real-world-test.ts",
    "test:quick": "tsx src/universal/quick-test.ts",
    "test:all": "npm run test && npm run test:format && npm run test:real-world",
    "start": "tsx src/universal/cli.ts",
    "dev": "tsx src/universal/cli.ts",
    "build:standalone": "./scripts/build-standalone.sh",
    "build:bun": "bun build src/universal/bun-cli.ts --compile --outfile dist/uhappy-bun",
    "build:deno": "deno compile --allow-all --output dist/uhappy-deno src/universal/deno-cli.ts",
    "daemon:start": "tsx src/index.ts daemon start",
    "daemon:stop": "tsx src/index.ts daemon stop",
    "daemon:status": "tsx src/index.ts daemon status",
    "legacy:test": "yarn build && tsx --env-file .env.integration-test node_modules/.bin/vitest run",
    "legacy:dev": "tsx --env-file .env.dev src/index.ts",
    "legacy:start": "yarn build && ./bin/uhappy.mjs",
    "prepublishOnly": "npm run build && npm run test:all",
    "release": "release-it"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.102",
    "@anthropic-ai/sdk": "^0.56.0",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@stablelib/base64": "^2.0.1",
    "@stablelib/hex": "^2.0.1",
    "@types/cross-spawn": "^6.0.6",
    "@types/http-proxy": "^1.17.16",
    "@types/ps-list": "^6.2.1",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/react": "^19.1.9",
    "@types/tmp": "^0.2.6",
    "ansi-to-html": "^0.7.2",
    "axios": "^1.10.0",
    "chalk": "^5.6.0",
    "commander": "^14.0.1",
    "cross-spawn": "^7.0.6",
    "expo-server-sdk": "^3.15.0",
    "fastify": "^5.5.0",
    "fastify-type-provider-zod": "4.0.2",
    "http-proxy": "^1.18.1",
    "http-proxy-middleware": "^3.0.5",
    "ink": "^6.1.0",
    "open": "^10.2.0",
    "ps-list": "^8.1.1",
    "qrcode-terminal": "^0.12.0",
    "react": "^19.1.1",
    "socket.io-client": "^4.8.1",
    "strip-ansi": "^7.1.2",
    "tar": "^7.4.3",
    "tmp": "^0.2.5",
    "tweetnacl": "^1.0.3",
    "ws": "^8.18.3",
    "yaml": "^2.8.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1",
    "@types/node": ">=20",
    "cross-env": "^10.0.0",
    "dotenv": "^16.6.1",
    "eslint": "^9",
    "eslint-config-prettier": "^10",
    "pkgroll": "^2.14.2",
    "release-it": "^19.0.4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "tsx": "^4.20.3",
    "typescript": "^5",
    "vitest": "^3.2.4"
  },
  "resolutions": {
    "whatwg-url": "14.2.0",
    "parse-path": "7.0.3",
    "@types/parse-path": "7.0.3"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "packageManager": "yarn@1.22.22"
}
